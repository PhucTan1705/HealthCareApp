<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/green3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/healthcare1"></ImageView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="35dp"
        android:layout_marginBottom="-25dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng Kí"
                android:textColor="@color/greenbri"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/editRegLoginUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/ip_bg_3"
                android:drawableLeft="@drawable/baseline_person_outline_24_green"
                android:ems="10"
                android:textSize="13dp"
                android:hint=" Nhập tên người dùng..."
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/greenbri"
                android:textColorHint="@color/greenbri"
                android:textColorLink="@color/teal_700"
                android:drawablePadding="5dp"
                />

            <EditText
                android:id="@+id/editTextRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ip_bg_3"
                android:drawableLeft="@drawable/baseline_email_24"
                android:ems="10"
                android:textSize="13dp"
                android:hint=" Nhập email..."
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/greenbri"
                android:textColorHint="@color/greenbri"
                android:textColorLink="@color/teal_700"
                android:drawablePadding="5dp"
                />

            <EditText
                android:id="@+id/editTextRegPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ip_bg_3"
                android:drawableLeft="@drawable/baseline_security_24"
                android:ems="10"
                android:hint=" Nhập mật khẩu..."
                android:textSize="13dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/greenbri"
                android:textColorHint="@color/greenbri"
                android:drawablePadding="5dp"/>

            <EditText
                android:id="@+id/editTextRegConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ip_bg_3"
                android:drawableLeft="@drawable/baseline_security_24"
                android:ems="10"
                android:hint=" Xác nhận mật khẩu..."
                android:textSize="13dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/greenbri"
                android:textColorHint="@color/greenbri"
                android:drawablePadding="5dp"/>


            <Button
                android:id="@+id/buttonReg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:text="Đăng Kí"
                android:textColor="@color/white"
                app:backgroundTint="@color/greenbri"
                android:layout_gravity="center"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/cotk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Có tài khoản?"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvExistingUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/cotk"
                    android:clickable="true"
                    android:text="Đăng Nhập"
                    android:textColor="@color/greenbri"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>